# Copy to .env and provide your preferred RSS/Atom feed
INGESTION_FEED_URL=https://www.cnnindonesia.com/nasional/rss
INGESTION_SOURCE_TYPE=rss_feed
INGESTION_LANGUAGE=en
INGESTION_STORAGE_PATH=data/text_items.jsonl

# Database URLs (override with Postgres DSN for shared environments)
INGESTION_DATABASE_URL=sqlite:///data/sentiment.db
SENTIMENT_DATABASE_URL=sqlite:///data/sentiment.db
DATABASE_URL=sqlite:///data/sentiment.db

# Sentiment worker overrides
SENTIMENT_MODEL_NAME=mdhugol/indonesia-bert-sentiment-classification
SENTIMENT_BATCH_LIMIT=32

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8000
